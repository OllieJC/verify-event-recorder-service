pipeline {
  agent none

  stages {
    stage('Create Docker Image') {
      agent {
        dockerfile {
          additionalBuildArgs '--tag event-recorder-image'
          reuseNode true
        }
      }
      steps {
        sh 'echo "Built Docker Container"'
      }
    }
    stage('Run Tests') {
      agent {
        docker {
          image 'event-recorder-image'
          reuseNode true
        }
      }
      steps {
        sh './run-tests.sh'
        sh 'tar -zcvf verify-event-recorder-service.zip src/'
      }
    }
  }
}
